{
  "name": "claude-mcp-switch",
  "version": "0.1.1",
  "description": "npx CLI to list/enable/disable Claude Code MCP servers (macOS/Linux/Windows)",
  "bin": {
    "claude-mcp-switch": "./src/ccmcp.js",
    "ccmcp": "./src/ccmcp.js"
  },
  "type": "commonjs",
  "private": false,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "test": "node scripts/run-tests.js test/unit test/integration",
    "test:unit": "node scripts/run-tests.js test/unit",
    "test:integration": "node scripts/run-tests.js test/integration",
    "test:watch": "node scripts/run-tests.js --watch test/unit test/integration",
    "test:coverage": "node scripts/run-tests.js --experimental-test-coverage test/unit test/integration"
  },
  "keywords": [
    "claude",
    "claude-code",
    "mcp",
    "cli",
    "npx",
    "config",
    "windows"
  ],
  "files": [
    "src",
    "scripts",
    "README.md",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "Jandro",
  "license": "MIT"
}
